</head>

<body>
<% if logged_in? %>
<ul>
  <li><%= link_to 'Reverse Domain Search', domains_path %></li>
  <li><%= link_to 'Site Monitoring', watchers_path %></li>
  <li><%= link_to 'Facebook Search', facebook_domains_path %></li>
</ul>
<% else %>
<ul>
  <li><a href="#news">News</a></li>
  <li><a href="#about">About</a></li>
</ul>
<% end %>
</body>
<body>

<% if flash[:notice] %>
 <div class = "flash_success"><%= flash[:notice]%>
 </div>
<% end %>

<% if flash[:alert] %>
 <div class = "flash_failure"><%= flash[:alert]%>
 </div>
<% end %>
  <div id="container">
    <div id="content">
      <%= yield %>
      <hr>
      <h6>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "(logout)", logout_path %>
        <% else %>
          <%= link_to "(login)", login_path %>
        <% end %>
      </h6>
    </div>
  </div>
</body>
