<body>

<% if flash[:notice] %>
 <div class = "flash_success"><%= flash[:notice]%>
 </div>
<% end %>

<% if flash[:alert] %>
 <div class = "flash_failure"><%= flash[:alert]%>
 </div>
<% end %>
  <div id="container">
    <div id="content">
      <%= yield %>
      <hr>
      <h6>
