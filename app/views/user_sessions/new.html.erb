  <%= link_to 'Login with Google', auth_at_provider_path(:provider => :google), class: " button loginBtn loginBtn--google" %>  
<button class="loginBtn loginBtn--facebook">
  Login with Facebook
</button>
</div>
<div class="login-page">

  <div class="form">
  <%= form_tag user_sessions_path, method: :post do %>
  <div class = "login-form">
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email%>
    <br/>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    <br/>
    </div>
    <div class="actions">
      <button>login</button>
    </div>
  <% end %>
  <div>
    <br>
  <%= link_to 'Create Account', new_user_path %>
  </div>
  </div>
  </div>
  </div>
  
  </div>
</div>
<% else %>
<br>
<td><% controller.redirect_to users_path %></td>
